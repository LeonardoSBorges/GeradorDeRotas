@model MVC.Models.Teams

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Teams</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
			<div class="form-group">
				<label asp-for="Address" class="control-label"></label><br />
				 <select asp-for="Address" asp-items="@(new SelectList(ViewBag.Address,"Id", "CityState"))" class="form-control" name="addressRegisterTeams"></select>
			</div>
            <div class="form-group">
				<label asp-for="People" class="control-label">Pessoas Disponíveis:</label><br />
                @if (ViewBag.People != null)
                {
                    @foreach (var person in ViewBag.People)
                    {
                        <input name="checkPeopleTeam" type="checkbox" value=@person.Id>
                        <label for="@person.Name"> @person.Name</label>
                        <br />
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
