@model IEnumerable<MVC.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1> Todas as Pessoas </h1>

<p>
        <a asp-action="Create" class="btn btn-secondary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HaveTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaveTeam)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-outline-success" asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.Id">Detalhes</a> 
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
 