@model MVC.Models.Person

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HaveTeam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HaveTeam)
        </dd>
    </dl>
    @if(ViewBag.Error != null)
    {
            <div class="alert alert-dismissible alert-danger">
                <strong>Ocorreu um erro!</strong><br />Nao pode excluir uma pessoa que esta em um time!.
            </div> 
    }
    else
    {
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger"/> 
        <a asp-action="Index" class="btn btn-outline-dark">Sair</a>
    </form>
    }
</div>
