@model IEnumerable<GeradorDeRotasMVC.Models.Teams>

@{
    ViewData["Title"] = "Index";
}

<h1>TODOS OS TIMES</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
            @foreach (var person in @item.People)
					{
						<p>@Html.DisplayFor(people => person.Name)</p>
					}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalhes</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
